#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

/* Horizontal combos - left hand */
ZMK_COMBO(esc,    &kp ESC,      LT3 LT2,    DEF SYM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(ret,    &kp RETURN,   LT2 LT1,    DEF SYM, COMBO_TERM_FAST, COMBO_IDLE_FAST)


// Combos overlapping HRMs are set up as hold-taps themselves to allow for instantaneous
// chording of mods. Custom hold-tap instances can be bootstrapped on the go using the
// 8-argument version of ZMK_COMBO defined in base.keymap.

ZMK_COMBO(tab,   &hml LS(LALT)TAB, LM3 LM2, DEF SYM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(cut,   &kp LS(DEL),   LB3 LB1,    DEF, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy,  &kp LC(INS),   LB3 LB2,    DEF, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(paste, &kp LS(INS),   LB2 LB1,    DEF, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Horizontal combos - right hand */
ZMK_COMBO(bspc,  &kp BSPC,     RT1 RT2,     DEF SYM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(del,   &kp DEL,      RT2 RT3,     DEF SYM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Vertical combos - left hand */
ZMK_COMBO(lbrc,   &kp LBRC,    LT0 LM0,     DEF, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(lbkt,   &kp LBKT,    LM0 LB0,     DEF, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(lpar,   &kp LPAR,    LT2 LM2,     DEF, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

/* Vertical combos - right hand */
ZMK_COMBO(rbrc,   &kp RBRC,    RT0 RM0,     DEF, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(rbkt,   &kp RBKT,    RM0 RB0,     DEF, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(rpar,   &kp RPAR,    RT2 RM2,     DEF, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(colon,  &kp COLON,   RT1 RM1,     DEF, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(semi,   &kp SEMI,    RM1 RB1,     DEF, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
